package com.hcl.java;

public class Perfect {
      public void check(int n){
    	  int sum=0;
    	  for(int i=1;i<n;i++){
    		  if(n%i){
    			  sum+=i;
    		  }
    	  }
    	  if(sum==n){
    		  System.out.println("Perfect no...");
    	  }else{
    		  System.out.println("Not Perfect no...");
    	  }
      }
      public static void main(String[] args) {
		int n=6;
		new Perfect().check(n);
	}
}
